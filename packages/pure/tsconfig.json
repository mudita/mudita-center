{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "node16",
    "moduleResolution": "node16",
    "lib": ["es2020"],
    "types": ["@types/jest"],
    "typeRoots": ["./node_modules/@types"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["src"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true
  }
}
