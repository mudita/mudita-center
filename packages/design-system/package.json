{
  "name": "@mudita/design-system",
  "version": "1.0.0-alpha.7",
  "description": "Mudita Design System",
  "author": "Mudita",
  "license": "MIT",
  "module": "dist/design-system.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "start": "tsdx watch --tsconfig ./tsconfig.build.json",
    "build": "tsdx build --tsconfig ./tsconfig.build.json",
    "postbuild": "npm run fonts:copy",
    "test": "tsdx test --passWithNoTests",
    "test:coverage": "npm run test -- --coverage",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "tsdx lint",
    "lint:css": "stylelint 'src/**/*.{ts,tsx,js,jsx}'",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook:serve": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "fonts:download": "node ./scripts/downloadFonts.js",
    "fonts:copy": "copyfiles --error --up 1 ./src/fonts/fallback/* dist"
  },
  "peerDependencies": {
    "react": ">=16",
    "styled-components": ">=5"
  },
  "devDependencies": {
    "@babel/core": "^7.13.14",
    "@mudita/eslint-config": "^1.0.15",
    "@mudita/stylelint-config": "^1.0.4",
    "@size-limit/preset-small-lib": "^4.10.2",
    "@storybook/addon-essentials": "^6.2.4",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.2.4",
    "@storybook/addons": "^6.2.4",
    "@storybook/react": "^6.2.4",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/react-hooks": "^5.1.1",
    "@testing-library/user-event": "^13.1.1",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/styled-components": "^5.1.9",
    "autoprefixer": "^10.2.5",
    "axios": "^0.21.1",
    "babel-loader": "^8.2.2",
    "babel-plugin-jsx-remove-data-test-id": "^3.0.0",
    "babel-plugin-styled-components": "^1.12.0",
    "copyfiles": "^2.4.1",
    "cssnano": "^4.1.10",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-styled-components": "^7.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "react-svg-loader": "^3.0.3",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-react-svg": "^3.0.3",
    "size-limit": "^4.10.2",
    "styled-components": "^5.2.3",
    "tscpaths": "0.0.9",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@mudita/app-function-component": "^1.0.10",
    "react-merge-refs": "^1.1.0"
  },
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mudita/mudita-center.git"
  },
  "bugs": {
    "url": "https://github.com/mudita/mudita-center/issues"
  },
  "homepage": "https://github.com/mudita/mudita-center#readme",
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "size-limit": [
    {
      "path": "dist/design-system.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/design-system.esm.js",
      "limit": "10 KB"
    }
  ],
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  }
}
