{
  "name": "@mudita/design-system",
  "version": "1.0.0-alpha.4",
  "description": "Mudita Design System",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mudita/mudita-center.git"
  },
  "bugs": {
    "url": "https://github.com/mudita/mudita-center/issues"
  },
  "homepage": "https://github.com/mudita/mudita-center#readme",
  "scripts": {
    "build": "tsc --p tsconfig.build.json && tscpaths -p tsconfig.build.json -s ./src -o ./lib",
    "postbuild": "npm run generate:icons && npm run copy:icons && npm run copy:fonts",
    "storybook:serve": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "test": "TZ=UTC jest --config=jest.config.js",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint 'src/**/*.{ts,tsx,js,jsx}'",
    "lint:js": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "typecheck": "tsc --noEmit",
    "download:fonts": "node ./scripts/downloadFonts.js",
    "copy:fonts": "copyfiles --error --up 1 ./src/fonts/fallback/* lib",
    "copy:icons": "copyfiles --error --up 1 ./src/icons/*.{ttf,woff,woff2,css} lib",
    "generate:icons": "fantasticon ./src/icons/assets -o ./src/icons/"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "dependencies": {
    "@mudita/app-function-component": "^1.0.10"
  },
  "peerDependencies": {
    "react": "^17.x",
    "react-dom": "^17.x",
    "styled-components": "^5.x"
  },
  "devDependencies": {
    "@babel/core": "^7.13.14",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.12.13",
    "@mudita/eslint-config": "^1.0.15",
    "@mudita/stylelint-config": "^1.0.4",
    "@storybook/addon-actions": "^6.2.1",
    "@storybook/addon-essentials": "^6.2.1",
    "@storybook/addon-links": "^6.2.1",
    "@storybook/react": "^6.2.1",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.5",
    "@testing-library/react-hooks": "^5.1.0",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.36",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "axios": "^0.21.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.12.0",
    "copyfiles": "^2.4.1",
    "fantasticon": "^1.1.3",
    "fs-extra": "^9.1.0",
    "jest": "^26.6.3",
    "jest-styled-components": "^7.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass-loader": "^11.0.1",
    "styled-components": "^5.2.1",
    "ts-jest": "^26.5.4",
    "tscpaths": "^0.0.9"
  }
}
