{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "scripthost",
      "es5",
      "es7",
      "es2017",
      "ESNext"
    ],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "App/*": ["../app/src/*"],
      "Renderer/*": ["../app/src/renderer/*"],
      "Cypress/*": ["../app/cypress/*"],
      "Storybook/*": ["../app/.storybook/*"],
      "Backend/*": ["../app/src/backend/*"],
      "Common/*": ["../app/src/common/*"]
    },
    "types": ["jest", "node", "@testing-library/react"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": [
    "./index.ts",
    "../app/src/**/*.d.ts",
    "../app/src/renderer/images"
  ],
  "exclude": [
    "../app/dist",
    "node_modules",
    "../app/src/**/__mocks__/*",
    "../app/src/**/*.test.ts",
    "../app/src/__mocks__",
    "../app/src/backend",
    "../app/src/contacts",
    "../app/src/common",
    "../app/src/dev-mode",
    "../app/src/main",
    "../app/src/seeds",
    "transform-svg.ts"
  ]
}
