{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "../../libs/app-*/main/**/*",
  ],
  "compilerOptions": {
    "composite": true,
    "resolveJsonModule": true,
    "types": [
      "electron-vite/node",
      "./images.d.ts"
    ],
    "paths": {
      "app-*": ["../../libs/app-*/src/index.ts"],
    }
  },
}
