      "app-store/models": ["libs/app-store/models/src/index.ts"],
      "app-theme/feature": ["libs/app-theme/feature/src/index.ts"],
      "app-theme/models": ["libs/app-theme/models/src/index.ts"],
      "app-theme/ui": ["libs/app-theme/ui/src/index.ts"],
      "app-theme/utils": ["libs/app-theme/utils/src/index.ts"],
