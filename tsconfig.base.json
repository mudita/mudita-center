      "news/feature": ["libs/news/feature/src/index.ts"],
      "news/main": ["libs/news/main/src/index.ts"],
      "news/models": ["libs/news/models/src/index.ts"],
      "news/routes": ["libs/news/routes/src/index.ts"],
      "news/ui": ["libs/news/ui/src/index.ts"],
      "news/utils": ["libs/news/utils/src/index.ts"],
      "settings/feature": ["libs/settings/feature/src/index.ts"],
      "settings/routes": ["libs/settings/routes/src/index.ts"]
